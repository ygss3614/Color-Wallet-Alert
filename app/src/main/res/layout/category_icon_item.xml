<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/new_category_icon_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/form_icon_marginLeft"
        android:layout_marginTop="@dimen/form_icon_marginTop"
        android:layout_marginEnd="@dimen/form_icon_marginRight"
        android:layout_marginBottom="@dimen/form_icon_marginBottom"
        android:background="@color/colorBoardBackground"
        android:contentDescription="@string/category_icon"
        android:paddingStart="@dimen/form_icon_paddingLeft"
        android:paddingTop="@dimen/form_icon_paddingTop"
        android:paddingEnd="@dimen/form_icon_paddingRight"
        android:paddingBottom="@dimen/form_icon_paddingBottom"/>
</RelativeLayout>
